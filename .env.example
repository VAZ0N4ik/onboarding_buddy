# Конфигурация OnboardingBuddy Bot

# ========================================
# ОСНОВНЫЕ НАСТРОЙКИ БОТА
# ========================================

# Токен Telegram бота (получить у @BotFather)
BOT_TOKEN=your_bot_token_here

# ID администраторов (через запятую)
ADMIN_IDS=123456789,987654321

# Режим отладки (True/False)
DEBUG_MODE=False

# ========================================
# БАЗА ДАННЫХ И ЛОГИРОВАНИЕ
# ========================================

# Путь к базе данных SQLite
DATABASE_PATH=data/onboarding.db

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Путь к файлу логов
LOG_FILE=data/logs/bot.log

# ========================================
# ИНФОРМАЦИЯ О КОМПАНИИ
# ========================================

# Название компании
COMPANY_NAME=АО "БигТайм АйТи"

# HR отдел
HR_EMAIL=hr@company.ru
HR_TELEGRAM=@hr_manager
HR_PHONE=+7 (xxx) xxx-xx-xx

# Техническая поддержка
SUPPORT_EMAIL=support@company.ru
SUPPORT_TELEGRAM=@tech_support
SUPPORT_PHONE=+7 (xxx) xxx-xx-xx

# ========================================
# РЕСУРСЫ И ССЫЛКИ КОМПАНИИ
# ========================================

# Корпоративный сайт
COMPANY_SITE=https://company-site.ru

# Страница команды
TEAM_PAGE=https://company-site.ru/team

# Справочник сотрудника
HANDBOOK_URL=https://company-site.ru/handbook

# Календарь событий
CALENDAR_URL=https://calendar.company.ru

# Корпоративный портал
PORTAL_URL=https://portal.company.ru

# ========================================
# ССЫЛКИ НА ВСТРЕЧИ И ПЛАНЕРКИ
# ========================================

# Общая планерка
MEETING_GENERAL=https://meet.company.ru/general

# Планерка IT отдела
MEETING_IT=https://meet.company.ru/it

# Планерка маркетинга
MEETING_MARKETING=https://meet.company.ru/marketing

# HR встречи
MEETING_HR=https://meet.company.ru/hr

# ========================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ
# ========================================

# Включить уведомления (True/False)
NOTIFICATION_ENABLED=True

# Уведомления об обратной связи (True/False)
FEEDBACK_NOTIFICATION=True

# ========================================
# НАСТРОЙКИ РАССЫЛКИ
# ========================================

# Задержка между отправками при рассылке (в секундах)
BROADCAST_DELAY=0.1

# Максимальная длина сообщения
MAX_MESSAGE_LENGTH=4000

# ========================================
# НАСТРОЙКИ ОНБОРДИНГА
# ========================================

# Максимальное количество этапов онбординга
MAX_ONBOARDING_STAGES=10

# Автоматические напоминания (True/False)
AUTO_REMINDERS=False

# Интервал напоминаний (в днях)
REMINDER_INTERVAL_DAYS=3

# ========================================
# ДОПОЛНИТЕЛЬНЫЕ НАСТРОЙКИ
# ========================================

# Часовой пояс
TIMEZONE=Europe/Moscow

# Язык по умолчанию
DEFAULT_LANGUAGE=ru

# Максимальный размер загружаемых файлов (в МБ)
MAX_FILE_SIZE_MB=20